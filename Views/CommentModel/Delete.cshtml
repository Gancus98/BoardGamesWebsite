                <dd>
                    @Html.DisplayFor(model => model.Author.FullName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Review)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Review.Title)
