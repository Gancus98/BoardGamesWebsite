@model IEnumerable<BoardGame.Models.MessageModels>

@{
    ViewBag.Title = "Index";
}

<h2>Messages database:</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SenderUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceiverUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReadDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SenderUser.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceiverUser.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReadDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
