@model IEnumerable<BoardGame.Models.FriendModels>

@{
    ViewBag.Title = "Index";
}

<h2>Friends database:</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MyFollowers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MyObservations)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MyFollowers.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MyObservations.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
